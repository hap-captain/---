/* pages/side/findThings/findThings.wxss */

.tabsBox {
  background-color: #F8F8FF;
}
.search {
  margin-right: 0rpx;
  font-size: 17px;
}
.tabs {
  width: 40%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.column {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  border-bottom: solid 1px #eee;
  top: 0;
  left: 0;
  z-index: 100;
 }
 .cu-bar {
  display: flex;
  position: relative;
  margin-top: 5px;
  align-items: center;
  min-height: 60rpx;
  width: 48%;
  justify-content: space-between;
  margin: 0 auto;
} 

.nav-switch-style{
  color: black;
  font-size: 17px;
  font-weight: 600;
}
.tabsItem
{
  position: relative;
  width: 30%;
  left: 0px;
  height: 30px;
  text-align: center;
}
.textLine
{
  position: relative;
  width: 80%;
  height: 9px;
  background-color: #14e2e494;
  z-index: 101;
  top: -2px;
  border-radius: 50%;
  margin: 0 auto;
}
.padding-xs {
  padding: 10rpx;
  margin: 0 auto;
}
.cu-tag {
  font-size: 28rpx;
  vertical-align: middle;
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0rpx 16rpx;
  height: 48rpx;
  font-family: Helvetica Neue, Helvetica, sans-serif;
  white-space: nowrap;
}
.tabs {
  width: 60%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.item
{
  position: relative;
  width: 100%;
  height: 170px;
  background-color:white;
}
.itemLeft
{
  position: relative;
  width: 36%;
  height: 160px;
  float: left;
}
.itemRight
{
  position: relative;
  width: 64%;
  height: 160px;
  float: left;
}
.itemPic
{
  position: relative;
  width: 100px;
  height: 100px;
  margin: 0 auto;
  margin-top: 15px;
  border-radius: 5px;
}
.itemPic image
{
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.padding {
  padding: 7rpx;
}
.text-lg {
  font-size: 25rpx;
}
.tag
{
  width: 60px;
  margin: 0 auto;
  margin-top: 10px;
}
.connent
{
  position: relative;
  margin-top: 15px;
  width: 90%;
  height: 100px;
}
.footer
{
  position: relative;
  width: 90%;
  height: 45px;
}
.title
{
  position: relative;
  width: 100%;
  height: 20px;
  font-size: 14px;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  -ms-text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  line-clamp: 1;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.describe
{
  position: relative;
    margin-top: 7px;
    line-height: 24px;
    width: 100%;
    height: 70px;
    font-size: 13px;
    color: gray;
    overflow: hidden;
    text-overflow: ellipsis;
    -ms-text-overflow: ellipsis;
    display: box;
    display: -webkit-box;
    line-clamp: 3;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.share
{
  position:absolute;
  width: 25px;
  height: 24px;
  right: 0px;
  margin-top: 10px;
}
.time{
  position: relative;
  position:absolute;
  width: 70px;
  height: 24px;
  right: 8px;
  margin-top: 12px;
}
.share text
{
  font-size: 25px;
  font-weight: 100;
}
.timeType
{
  position: relative;
  font-size: 10px;
  top: 3px;
  color: gray;
}
.fixed {
  position: fixed;
 }
 .toTop{
  position: fixed;
  bottom: 120px;
  right: 20px;
}
.animationLaunchStar{
  animation: bounceInUp 2s 1;
}
.animationLaunchEnd{
  animation: bounceOutUp 2s 1;
}
.animationTop{
  animation: bounce 4s infinite;
}
.putTag
{
  position:fixed;
  width: 45px;
  height: 45px;
  bottom: 50px;
  right: 20px;
}
.putTag image
{
  width: 45px;
  height: 45px;
}
.cu-btn.icon {
	width: 70rpx;
	height: 56rpx;
	border-radius: 500rpx;
	padding: 0;
}
.cu-btn:not([class*="bg-"]) {
  background-color: #ffffff;
}